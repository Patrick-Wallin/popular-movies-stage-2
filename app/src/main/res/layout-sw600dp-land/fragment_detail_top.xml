<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail_fragment_top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.piwal.popularmovies.DetailActivityFragment"
    android:orientation="vertical">

    <ImageView
        android:layout_centerInParent="true"
        android:id="@+id/backdrop_image_view"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:background="@android:color/white"
        android:id="@+id/detail_poster_image_view"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:padding="2dp"
        android:layout_margin="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_toRightOf="@+id/detail_poster_image_view"
        android:layout_alignTop="@+id/backdrop_image_view"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/favorite_image_button"
            android:background="@drawable/ic_unfavorite_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/title_text_view"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:paddingBottom="@dimen/activity_padding"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/release_date_text_view"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RatingBar
            android:id="@+id/rating_rating_bar"
            android:numStars="@string/full_rating_point"
            style="?android:attr/ratingBarStyleSmall"
            android:isIndicator="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/rating_text_view"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</RelativeLayout>
